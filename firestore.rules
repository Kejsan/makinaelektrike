rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is the owner of the document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Helper function to check if user has admin privileges (implement based on your auth system)
    // For now, assuming detailed admin roles are managed via custom claims or separate collection
    function isAdmin() {
       return request.auth.token.admin == true; // Placeholder
    }

    // Dealers collection
    match /dealers/{dealerId} {
      allow read: if true; // Public can read basic dealer info
      allow write: if isAuthenticated() && isOwner(dealerId); // Dealers manage their own profile
    }

    // Listings collection
    match /listings/{listingId} {
      allow read: if true; // Public can read listings
      // Dealers can create/update/delete their own listings
      allow create: if isAuthenticated() && request.resource.data.dealerId == request.auth.uid;
      allow update: if isAuthenticated() && resource.data.dealerId == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.dealerId == request.auth.uid;
    }
    
    // Dealer Models (if kept separate)
    match /dealer_models/{modelId} {
    	allow read: if true;
      allow write: if isAuthenticated(); // Refine as needed
    }
    
    // Blog Posts
    match /blog_posts/{postId} {
      allow read: if true;
      allow write: if isAuthenticated(); // Restrict to admin in real app
    }

    // Enquiries
    match /enquiries/{enquiryId} {
      allow create: if true; // Public can create enquiries
      allow read: if isAuthenticated() && (
        resource.data.dealerId == request.auth.uid || isAdmin()
      ); // Dealers see their own enquiries, admins see all
    }
  }
}
