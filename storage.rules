rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Listings: Anyone can read, only authenticated owner can write
    match /listings/{userId}/{allPaths=**} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Dealers: Anyone can read, only authenticated owner can write
    match /dealers/{dealerId}/{allPaths=**} {
      allow read;
      allow write: if request.auth != null;
    }

    // Models: Anyone can read, only authenticated users can write (admin managed)
    match /models/{modelId}/{allPaths=**} {
      allow read;
      allow write: if request.auth != null;
    }

    // Default: deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
